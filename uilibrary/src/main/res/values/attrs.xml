<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PageIndicator">
        <attr name="blockSize" format="dimension|reference" />
        <attr name="gap" format="dimension|reference" />
        <attr name="blockColor" format="color|reference" />
        <attr name="highlightColor" format="color|reference" />
        <attr name="totalCount" format="integer|reference" />
        <attr name="blockType" format="enum">
            <enum name="square" value="0" />
            <enum name="circle" value="1" />
            <enum name="verticalLine" value="2" />
            <enum name="horizontalLine" value="3" />
            <enum name="alphabet" value="4" />
            <enum name="numeric" value="5" />
            <enum name="customChar" value="6" />
        </attr>
        <attr name="customChar" format="string|reference" />
    </declare-styleable>

</resources>